<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_time"
        android:textStyle="bold"
        android:layout_marginRight="1dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="18:00:00"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textColor="#000"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="#e90d293e"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"

            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/weather_pic"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/common_google_signin_btn_icon_dark_normal_background"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="50dp"
                >
                <TextView
                    android:id="@+id/viewTextWind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ветер, м/с"
                    android:textColor="#fff"
                    android:textSize="10sp"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/wind_direction_icon"
                    android:src="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/wind_description"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:text="SW"
                        android:textStyle="bold"
                        android:layout_below="@id/wind_direction_icon"
                        android:textColor="#FFF"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/wind_speed"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:text="7"
                        android:textStyle="italic"
                        android:layout_marginLeft="2dp"
                        android:textColor="#fc212c"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginTop="90dp"
                android:layout_marginRight="50dp"
                >
                <TextView
                    android:id="@+id/viewTextHumid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Влажность, %"
                    android:textColor="#fff"
                    android:textSize="10sp"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/humidity_icon"
                    android:src="@drawable/ic_humidity"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/humidity_description"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:text="24%"
                    android:textStyle="bold"
                    android:layout_below="@id/humidity_icon"
                    android:textColor="#FFF"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weather_description"
                android:layout_toRightOf="@+id/weather_pic"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:text="Yasno"
                android:textColor="#fff"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weather_temp"
                android:layout_toRightOf="@+id/weather_pic"
                android:layout_below="@+id/weather_description"
                android:text="39 C"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weather_day"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="1dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="Fri"
                android:textStyle="bold"
                android:textColor="#FFF"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weather_date"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="1dp"
                android:textAlignment="center"
                android:textSize="10sp"
                android:layout_marginTop="35dp"
                android:text="2016-06-05"
                android:textColor="#FFF"
                />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>